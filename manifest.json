{
  "manifest_version": 3,
  "name": "3D Multiplayer Game",
  "version": "1.0.0",
  "description": "Multiplayer Three.js game on Bitcoin ordinals",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3002/*",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "3D Game Settings"
  }
}
